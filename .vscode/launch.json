        {
            "name": "g++ - Build and debug main file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/linux/program",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
